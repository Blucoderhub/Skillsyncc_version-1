{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@shared/*": [
                "./shared/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/replit_integrations"
    ]
}